<% @books.each do |book| %>
<div class="container px-5 px-sm-0">
     <div class="row">
       
       <div class="col-md-3">
         <h2>User info</h2>
         <%= link_to book_path(book.id) do %>
         <p><%= image_tag book.user.get_profile_image(100,100) %></p>
         <% end %>
         <table class="table">
           <tbody>
             <tr></tr>
             <tr>
               <th>name<%= book.user.name %></th>
             </tr>
             <tr>
               <th>introduction<%= book.user.introduction %></th>
               <th></th>
             </tr>
           </tbody>
         </table>
          <% end %>
         <div class="row">
            <%= link_to @edit_user, class: "btn btn-outline-secondary btn-block" do %> 
            <i class="fa-solid fa-user-gear"></i>
            <% end %>
         </div>
         <h2 class="mt-3">New book</h2>
         <%= form_with model: @book do |f| %>
         <div class="form-group">
         <h4>Title</h4>
         <%= f.text_field :title %>
         </div>
         <div class="form-group">
         <h4>Opinion</h4>
         <%= f.text_area :body %>
         </div>
         <div class="form-group">
         <%= f.submit 'Crate Book'%>
         <% end %>
         </div>
         </div>
         <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
           
               <thead>
                <tr>
                  <tr></tr>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
               </thead>
            <% @books.each do |book| %>
              </table>
            <% end %>
         </div>
       </div>
     </div>
   
</div>